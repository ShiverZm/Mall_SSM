<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shop.core.dao.Imgdao" >
    <!--  -->
    <update id="Addimg" parameterType="img">
	    update i_img
	    <set>
	         i_data=#{i_data}
	    </set>
	        where i_id=1
	</update>
	
	<select id="selectimg" parameterType="Integer" resultType="img">
	    select *
	    from i_img
	    where  i_id= '1'
    </select>
    
</mapper>
